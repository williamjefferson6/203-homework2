#include <iostream>
using namespace std;
void mystery3(int nums[], int length)
{
	for (int i = 0; i < length - 1; i++) {
		if (nums[i] > nums[i + 1]) {
			nums[i + 1]++;
		}
	}
	for (int i = 0; i < length; i++) {
		cout << nums[i] << " ";
	}
	cout << endl;
}
int main()
{
	int list1[] = { 42 };
	int list2[] = { 14,7 };
	int list3[] = { 7,1,3,2,0,4 };
	int list4[] = { 10,8,9,5,5 };
	int list5[] = { 12,11,10,10,8,7 };
	mystery3(list1, 1);
	mystery3(list2, 2);
	mystery3(list3, 6);
	mystery3(list4, 5);
	mystery3(list5, 6);
}
